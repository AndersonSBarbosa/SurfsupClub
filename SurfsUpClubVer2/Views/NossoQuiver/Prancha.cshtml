@model Entidades.Prancha
@{
    ViewBag.Title = "Prancha";
}

    <br />
    <br />
    <br />
    <div class="row mt-5">
        <div class="col">
            <h2>Prancha/<strong>@Model.NomePrancha</strong></h2>
        </div>
    </div>

    <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="portfolio-title">
                            <div class="row">
                                <div class="col-lg-10 text-center">
                                    <h2 class="mb-0">@Model.NomePrancha</h2>
                                </div>
                            </div>
                        </div>

                        <hr class="tall">
                    </div>
                </div>

                <div class="row mb-5">
                    <div class="col-lg-4">
@if (ViewBag.ImagensPrancha != null)
{
                        <div class="owl-carousel owl-theme owl-loaded owl-drag owl-carousel-init" data-plugin-options="{'items': 1, 'margin': 10, 'animateOut': 'fadeOut', 'autoplay': true, 'autoplayTimeout': 3000}">


                            <div class="owl-stage-outer">
                                <div class="owl-stage" style="transform: translate3d(-1080px, 0px, 0px); transition: all 0s ease 0s; width: 4386px;">
                                    


    @foreach (var rs in ViewBag.ImagensPrancha)
    {
            <div class="owl-item" style="width: 293.25px; margin-right: 20px;">
                <div>
                    <span class="img-thumbnail d-block">
                        <img alt="" class="img-fluid" src="~/painelControle/Content/ImagensPrancha/@rs.Imagem">
                    </span>
                </div>
            </div>
    }


                                </div>
                            </div>

                            <div class="owl-dots">

                                @*//@foreach (var rss in ViewBag.ImagensPrancha)*@
                                @*//{*@
                                    <button role="button" class="owl-dot"><span></span></button>
                                    <button role="button" class="owl-dot active"><span></span></button>
                                @*//}*@
                                               

                            </div>
                        </div>
}
                    </div>

                    <div class="col-lg-8">

                        <div class="portfolio-info">
                            <div class="row">
                                <div class="col-lg-12 text-right">
                                    <ul>
                                        <li>
                                            @*<a href="#" data-tooltip="" data-original-title="Like"><i class="fas fa-heart"></i>xx</a>*@
                                        </li>
                                        <li>
                                            <i class="fas fa-calendar-alt"></i>@Model.DataCadastro
                                        </li>
                                        <li>
                                            <i class="fas fa-tags"></i> <a href="#">@Model.CodigoInterno</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <h5 class="mt-2">Fornecedor: @Model.Fornecedor.NomeFantasia</h5>
                        <p class="mt-5">@Model.Descricao</p>

                        <a href="#" class="btn btn-primary btn-icon"><i class="fas fa-external-link-alt"></i>Alugar</a>

                        <ul class="portfolio-details">
                            <li>
                                <h5 class="mt-2 mb-1">Detalhes</h5>

                                <ul class="list list-inline list-icons">
                                    <li class="list-inline-item"><i class="fas fa-check-circle"></i><strong>Tam:</strong> @Model.Tamanho</li>
                                    <li class="list-inline-item"><i class="fas fa-check-circle"></i><strong>Vol.:</strong> @Model.Volume</li>
                                    <li class="list-inline-item"><i class="fas fa-check-circle"></i><strong>Pol:</strong> @Model.Polegadas"</li>
                                    <li class="list-inline-item"><i class="fas fa-check-circle"></i><strong>Lit.:</strong> @Model.Litragem</li>
                                    <li class="list-inline-item"><i class="fas fa-check-circle"></i><strong>Esp.:</strong> @Model.Espessura</li>
                                    <li class="list-inline-item"><i class="fas fa-check-circle"></i><strong>Lar:</strong> @Model.Largura</li>
                                    <li class="list-inline-item"><i class="fas fa-check-circle"></i><strong>Marca:</strong> @Model.PranchaMarca.Marca</li>
                                    <li class="list-inline-item"><i class="fas fa-check-circle"></i><strong>Modelo:</strong> @Model.PranchaModelo.Modelo</li>
                                    <li class="list-inline-item"><i class="fas fa-check-circle"></i><strong>Modalidade:</strong> @Model.PranchaModalidade.Modalidade</li>
                                </ul>
                            </li>
                            <li>
                                <h5 class="mt-2 mb-1">Localização</h5>
                                <p>*****************</p>
                            </li>
                        </ul>

                    </div>
                </div>

    </div>


