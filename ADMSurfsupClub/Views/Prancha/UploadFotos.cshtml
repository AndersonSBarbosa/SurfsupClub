@model Entidades.Prancha
@{
    ViewBag.Title = "Carregar Imagens da Prancha";
}

<h2>@ViewBag.Title</h2>

<h2>@ViewBag.MensagemInicio</h2>

<div class="well well-sm text-primary text-center">
    @ViewBag.MensagemExito
    @ViewBag.MensagemErro
</div>

@using (Html.BeginForm("UploadFotos", "Prancha", FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <fieldset>

            <div class="form-group">
                @Html.LabelFor(model => model.IdPrancha, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.IdPrancha, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                <label for="file" class = "control-label col-md-2">Upload Image:</label>
                <div class="col-md-6 dropdown">
                    <input type="file" name="file" id="file" style="width: 100%;" class="form-control" /> 
                </div>
            </div>

        </fieldset>

        <div class="form-actions col-md-offset-2">
            <input class="btn btn-primary" type="submit" name="btnsalvar" value="Salvar" />
            <br />
            <a href="~/Prancha/Atualizar/@Model.IdPrancha">Voltar</a>
           
        </div>

        <table id="example" class="table table-striped responsive-utilities jambo_table">
            <thead>
                <tr class="headings">
                    <th>ID</th>
                    <th>Imagem</th>
                    <th>Capa</th>
                    <th>Data Cadastro</th>
                    <th>Situação</th>


                    <th><a class="btn btn-info" href="~/Prancha/UploadFotos/@Model.IdPrancha">Subir Fotos</a></th>
                </tr>
            </thead>
            <tbody>

                @if (ViewBag.ImagensPrancha != null)
                {
                    foreach (var rs in ViewBag.ImagensPrancha)
                    {
                        <tr class="even pointer">
                            <td>@rs.IdImagem</td>
                            <td><img src="~/Content/ImagensPrancha/@rs.Imagem" width="50" height="50" /></td>
                            <td>@rs.Capa</td>
                            <td>@rs.DataCadastro</td>
                            <td>@rs.Status.NomeStatus</td>
                            <td>
                                <a class="btn btn-danger" href="~/Prancha/delete/@rs.IdPrancha">Excluir</a>
                                @*<a class="btn btn-info" href="~/Prancha/Atualizar/@rs.IdPrancha">Editar</a>*@


                            </td>
                        </tr>
                    }
                }

            </tbody>

        </table>

    </div>

}