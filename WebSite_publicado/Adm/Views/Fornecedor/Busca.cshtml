@{
    ViewBag.Title = "Pesquisar";
}

<h2>@ViewBag.Title</h2>

<div class="panel panel-default">
    <div class="panel-heading">Buscar Fornecedores no Sistema</div>


                @using (Html.BeginForm())
                {
                    <div class="form-horizontal">
                        <fieldset>
                            <div class="form-group">

                                <div class="input-group">
                                    @*@Html.Label("Buscar", new { @class = "control-label col-md-4" })*@
                                    @Html.TextBox("txtBusca", null, new { @class = "form-control" })
                                    <span class="input-group-btn">
                                        <input class="btn btn-primary" type="submit" value="Buscar" />
                                    </span>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                }
   
            <table id="example" class="table table-striped responsive-utilities jambo_table">
                <thead>
                    <tr class="headings">
                        <th>ID</th>
                        <th>CNPJ</th>
                        <th>Nome Fantasia</th>
                        <th>Razao Social</th>
                        <th>Cidade/SP</th>
                        <th>Data Cadastro</th>
                        <th>Situação</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rs in Model)
                    {
                        <tr class="even pointer">
                            <td>@rs.CodigoInterno-@rs.IdFornecedor</td>
                            <td>@rs.CNPJ</td>
                            <td>@rs.NomeFantasia</td>
                            <td>@rs.RazaoSocial</td>
                            <td>@rs.Cidade/@rs.Estado</td>
                            <td>@rs.DataCadastro</td>
                            <td>@rs.Status.NomeStatus</td>
                            <td>
                                <a class="btn btn-info" href="~/Fornecedor/Atualizar/@rs.IdFornecedor">Editar</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
  
